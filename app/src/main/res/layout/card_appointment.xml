<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:backgroundTint="#f2eecb"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtAppointment"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Appointment"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtRem"
            android:text="'Reminder'"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/txtFrom"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="For:"
            android:layout_below="@id/txtRem"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_below="@id/txtRem"
            android:layout_toRightOf="@id/txtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/date_container"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/txtDate"
                android:text="Date:"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/date"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/date_container"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:textStyle="bold"
                android:textSize="22sp"
                android:id="@+id/txtTime"
                android:text="Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="22sp"
                android:id="@+id/time"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>